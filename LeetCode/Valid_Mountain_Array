class Solution {
public:
    bool validMountainArray(vector<int>& arr) {
        int p1=0;
        int p2=arr.size()-1;
        if(arr.size()<3){
            return false;
        }

        if((arr[0]>arr[1]) || (arr[p2]>arr[p2-1])){
            return false;
        }
        int flag1=0;
        int flag2=0;

        while(flag1!=1 || flag2!=1){

            if(arr[p1]<arr[p1+1]){
                p1++;
            }
            else{
                flag1=1;
            }

            if(arr[p2]<arr[p2-1]){
                p2--;
            }
            else{
                flag2=1;
            }

            if(p1==p2){
                return true;
            }


        }

        return false;
        
    }
};
